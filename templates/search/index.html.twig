{% extends 'base.html.twig' %}


{% block body %}
<div class="container-sm">
    <div class=".col-md-4">
{% if app.request.method == 'POST' %}
    <div>
        {% if objets | length == 0 %}
            <h4>Aucun résultat pour votre recherche.</h4>
            {% else %}
                <h5 class="mt-3">Vos résultats de recherche</h5>
                <button type="button" class="btn btn-outline-info"> <a href="{{ path('home')}}">Retourner à la page d'accueil</a><i class="fas fa-undo-alt"></i></a></button>
                {% for objet in objets %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('home', {'': objet.titre}) }}">
                                <h6 class="card-title"><a href="{{ path('home_show',{'id':objet.id})}}">{{ objet.titre }}<i class="fas fa-info-circle"></i></a></h6>
                                <div class="text-dark small p-1 rounded">
                                {{ objet.description }}
                                <img class="card-img-top" src="{{ asset("uploads/images/"~objet.image) }}"  
                                </div>
                        </a>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
</div>
{% endif %}
</div>
</div>
{% endblock %}
