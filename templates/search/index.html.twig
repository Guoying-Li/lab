{% extends 'base.html.twig' %}

{% block body %}
<div class="container-sm">
    <div class="row">
        <div class="col-md-12">
            {% if app.request.method == 'POST' %}
                <div>
                    {% if objets|length == 0 %}

                        <div class="container mt-5 sk-main">
                            <div class="row justify-content-center">
                                <div class="col-12 col-md-8">
                                    <div class="card p-4 text-center shadow">
                                        <div class="card-body">
                                            <p class="fs-1">Aucun résultat pour votre recherche.</p>
                                            <a href="{{ path('app_objets')}}" class="btn sk-btn">Retour à la liste des objets</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        <h2 class="mt-3">Vos résultats de recherche</h2>
                        <a href="{{ path('app_objets')}}" class="btn sk-btn my-3">Retour à la liste des objets</a>
                        
                        <div class="row">
                            {% for objet in objets %}
                                <div class="col-md-3 mb-5 mt-3">
                                    <a href="{{ path('app_objet_show' , {'slug': objet.titre}) }}" class="card mb-6 shadow-sm">
                                        <div class="card mb-6 shadow-sm">
                                            <img src="{{ vich_uploader_asset(objet, 'imageFile') }}" class="card-img-top" style="width: 100%; height: 200px;" alt="image">
                                            <div class="d-flex mt-1">
                                                {% for categorie in objet.categories %}
                                                    <span class="badge text-bg-primary mx-2 w-25">{{ categorie.nom }}</span>
                                                {% endfor %}
                                            </div>
                                            <div class="card-body h-100">
                                                <h3 class="card-title">{{ objet.titre }}</h3>
                                                <p class="card-text">{{ objet.description }}</p>
                                                
                                            </div>
                                    </a>
                                            <div class="card-footer d-flex">
                                        
                                            </div>
                                        </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}



