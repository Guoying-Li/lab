{% extends 'base.html.twig' %}

{% block title %}
    {% set isCreate = app.request.get('_route') == 'app_objet_create' %}
    {{ isCreate ? 'Ajouter un objet' : 'Modifier un objet' }}
{% endblock %}

{% block body %}
    {% set isCreate = app.request.get('_route') == 'app_objet_create' %}
    
    <h1 class="text-center mt-5 text-decoration-underline">
        {{ isCreate ? 'AJOUTER UN OBJET' : 'MODIFIER MON OBJET' }}
    </h1>

    <section class="container my-5 d-flex justify-content-center">
        <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; border-radius: 10px;">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <div class="mb-3">
                    {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.categories, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.categories, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.categories) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.modalite, 'Modalité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.modalite, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.modalite) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        {{ isCreate ? 'Ajouter' : 'Modifier' }}
                    </button>
                    <a href="{{ path('app_objet') }}" class="btn btn-secondary">Annuler</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}


