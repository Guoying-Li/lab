{% extends 'base.html.twig' %}

{% block title %}Rajouter un objet{% endblock %}

{% block body %}

	{% if (app.request.get('_route')) == 'app_objet_create'%}

		<h1 class="text-center mt-5 text-decoration-underline">ajouter un objet</h1>

	{% endif %}

	{% if (app.request.get('_route')) == 'app_objet_edit'%}

		<h1 class="text-center mt-5 text-decoration-underline">modifier un objet</h1>

	{% endif %}



<main class="sk-main">

	<div class="container">


		{{ form_start(form) }}
		
		
    	{{ form_row(form.imageFile)}}

		{{ form_label(form.titre, 'Titre', { 'label_attr': {'class': 'form-label m-0 fw-bold'} } ) }}
		{{ form_widget(form.titre, { 'attr': {'class': 'form-control my-2'} } ) }}
		{{ form_errors(form.titre, { 'attr': {'class': 'danger mt-2'} } ) }}

		{{ form_label(form.categories, 'Cat√©gories', { 'label_attr': {'class': 'form-label m-0 fw-bold'} } ) }}
		{{ form_widget(form.categories, { 'attr': {'class': 'form-control my-2 d-flex justify-content-around'} } ) }}
		{{ form_errors(form.categories, { 'attr': {'class': 'danger mt-2'} } ) }}

		{{ form_label(form.description, 'Description', { 'label_attr': {'class': 'form-label m-0 fw-bold'} } ) }}
		{{ form_widget(form.description, { 'attr': {'class': 'form-control my-2'} } ) }}
		{{ form_errors(form.description, { 'attr': {'class': 'danger mt-2'} } ) }}

		


		<div clas="d-flex">
			<button type="submit" class="sk-btn my-5">Enregistrer</button>
			<a href="#" class="btn btn-secondary">Annuler</a>
		</div>


		{{ form_end(form) }}

	</div>

</main>

{% endblock %}