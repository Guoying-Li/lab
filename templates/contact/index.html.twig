{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="contact-container">
        <div class="contact-image-container">
            <img src="{{ asset('images/learn2.jpg') }}" alt="Bureau">
            <div class="info-box">
                <p><strong>NEW BUSINESS</strong><br>prospects@empruntheque.com</p>
                <p><strong>NEW JOB</strong><br>recrutement@empruntheque.com</p>
            </div>
        </div>
     
        <div class=" contact-form-container">
        <h4>NOUS CONTACTER</h4>


        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
          
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
